{% extends 'base.html.twig' %}

{% block title %}Neem contact met ons op{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-5">Neem contact met ons op</h1>

    {% for msg in app.flashes('success') %}
        <div class="alert alert-success">{{ msg }}</div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-7">
            {{ form_start(contactForm) }}
                {{ form_row(contactForm.naam) }}
                {{ form_row(contactForm.email) }}
                {{ form_row(contactForm.bericht) }}
                <button type="submit" class="btn btn-primary btn-lg px-5">Verzenden</button>
            {{ form_end(contactForm) }}
        </div>

        <div class="col-md-5 mt-4 d-flex align-items-center justify-content-center">
            <div style="width:100%; max-width:400px;">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3443.123456789!2d-97.743060684878!3d30.26715398180016!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5a1b1b1b1b1%3A0x123456789abcdef!2sAustin%2C%20TX!5e0!3m2!1sen!2sus!4v1610000000000!5m2!1sen!2sus"
                    width="100%" height="300" style="border:0; border-radius:16px;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>
{% endblock %}
